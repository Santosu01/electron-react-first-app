{
  "name": "electron-react-first-app",
  "version": "1.0.0",
  "description": "Desktop application with electron and react",
  "private": true,
  "author": "Marcio Santos",
  "homepage": "./",
  "main": "build/electron-main.js",
  "scripts": {
    "compile-electron-main": "npx tsc --project tsconfig.electron.json",
    "web-build": "react-scripts build",
    "web-start": "react-scripts start",
    "app-build": "npm run web-build && npm run compile-electron-main && copyfiles -f electron/*.js build/",
    "app-start": "npm run app-build && electron-forge start --app-path ./build/electron-main.js",
    "postinstall": "electron-builder install-app-deps",
    "package-app-files": "npm run app-build && electron-forge package",
    "make-app-installer": "npm run app-build && electron-forge make",
    "pack": "npm run app-build && electron-builder --dir",
    "dist": "npm run app-build && electron-builder"
  },
  "build": {
    "appId": "com.first.app",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "build/electron-main.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolutions": {
    "**/symlink": false
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.101",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "cross-env": "^7.0.3",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  }
}
